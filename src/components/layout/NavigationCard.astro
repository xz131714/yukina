---  
export interface Props {  
  name: string;  
  url: string;  
  description: string;  
  avatar: string;  
  category: string;  
  external?: boolean;  
}  
  
const { name, url, description, avatar, category, external = true } = Astro.props;  
---  
  
<a   
  href={url}   
  target={external ? "_blank" : "_self"}  
  rel={external ? "noopener noreferrer" : undefined}  
  class="group block p-4 rounded-xl bg-[var(--card-color)] hover:shadow-lg hover:shadow-[var(--primary-color)]/10 transition-all duration-300 transform hover:-translate-y-1"  
>  
  <div class="flex items-center gap-3 mb-3">  
    <div class="w-10 h-10 rounded-xl bg-white dark:bg-gray-100 p-2 shadow-sm flex items-center justify-center">  
      <img   
        src={avatar}   
        alt={name}   
        class="w-6 h-6 object-contain"  
        loading="lazy"  
      >  
    </div>  
    <h3 class="font-bold text-base text-[var(--text-color)] group-hover:text-[var(--primary-color)] transition-colors truncate">  
      {name}  
    </h3>  
  </div>  
    
  <p class="text-sm text-[var(--text-color-lighten)] mb-3 leading-relaxed line-clamp-2">  
    {description}  
  </p>  
    
  <div class="flex justify-between items-center">  
    <span class="text-xs px-2.5 py-1 rounded-full bg-[var(--primary-color-lighten)] text-[var(--primary-color)] font-medium">  
      {category}  
    </span>  
    <svg   
      class="w-4 h-4 text-[var(--text-color-lighten)] group-hover:text-[var(--primary-color)] group-hover:translate-x-1 transition-all"   
      fill="none"   
      stroke="currentColor"   
      viewBox="0 0 24 24"  
    >  
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>  
    </svg>  
  </div>  
</a>  
  
<style>  
  .line-clamp-2 {  
    display: -webkit-box;  
    -webkit-line-clamp: 2;  
    -webkit-box-orient: vertical;  
    overflow: hidden;  
  }  
</style>