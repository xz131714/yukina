---  
export interface Props {  
  children: any;  
}  
---  
  
<div class="error-component my-4 p-4 rounded-xl bg-[var(--card-color)] border-l-4 border-red-500 shadow-sm">  
  <div class="flex items-start gap-3">  
    <div class="flex-shrink-0 w-5 h-5 mt-0.5">  
      <svg viewBox="0 0 20 20" fill="currentColor" class="text-red-500">  
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />  
      </svg>  
    </div>  
    <div class="flex-1 text-[var(--text-color)]">  
      <slot />  
    </div>  
  </div>  
</div>  
  
<style>  
  .error-component {  
    background-color: oklch(95% 0.08 0 / 0.95);  
  }

  /* 暗色主题适配 */
  :root.dark .error-component {
    background-color: rgba(80, 20, 20, 0.75);
  }

  :root.dark .error-component svg {
    color: #f87171;
  }
</style>