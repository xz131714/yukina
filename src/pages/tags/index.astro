---
import ChipLayout from "../../layouts/ChipLayout.astro";
import key from "../../i18n/keys";
import { i18n } from "../../i18n/translation";
import { GetTags } from "../../utils/content";

const tags = [...(await GetTags()).values()].sort();
const chips = tags.map((tag) => {
  return {
    name: tag.name,
    slug: tag.slug,
    subChip: tag.posts.length.toString(),
  };
});
---

<ChipLayout chips={chips} title={i18n(key.pages_tags_title)} />
