---  
import MainLayout from "../layouts/MainLayout.astro";  
import RyuChanConfig from "../../ryuchan.config";  
import { Icon } from "astro-icon/components";  
import NavigationCard from "../components/layout/NavigationCard.astro";  
---  
  
<MainLayout   
  title="网站导航"   
  subTitle="收藏的常用网站和工具链接"  
>  
  <div class="space-y-8">  
    <!-- 导航内容 -->  
    <div class="space-y-10">  
      <!-- 开发工具 -->  
      <section>  
        <div class="flex items-center gap-3 mb-6">  
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-[var(--primary-color)] to-[var(--primary-color-darken)] flex items-center justify-center">  
            <Icon name="mdi:code-tags" class="w-5 h-5 text-[var(--primary-color)]" />  
          </div>  
          <h2 class="text-xl font-bold text-[var(--text-color)]">开发工具</h2>  
          <div class="flex-1 h-px bg-gradient-to-r from-[var(--border-color)] to-transparent"></div>  
        </div>  
          
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">  
          <NavigationCard  
            name="Umami"  
            url="https://us.umami.is/dashboard"  
            description="开源的网站访问统计分析平台，提供详细的用户行为分析"  
            avatar="https://img.xiaozhangya.xin/file/Logo/1753850918996_umami.png"  
            category="统计分析"  
          />  
            
          <NavigationCard  
            name="Vercel"  
            url="https://vercel.com/login?next=%2Fxz131714s-projects"  
            description="现代化的前端部署平台，支持静态网站快速部署"  
            avatar="https://img.xiaozhangya.xin/file/Logo/1753851435981_Vercel.png"  
            category="部署托管"  
          />  
            
          <NavigationCard  
            name="Iconify"  
            url="https://iconify.design/"  
            description="海量图标库和图标搜索工具，支持多种格式"  
            avatar="https://iconify.design/favicon.ico"  
            category="图标设计"  
          />  
            
          <NavigationCard  
            name="Iconfont"  
            url="https://www.iconfont.cn/"  
            description="阿里巴巴矢量图标库，提供丰富的图标资源"  
            avatar="https://img.xiaozhangya.xin/file/Logo/DEPF9Ovv.png"  
            category="图标设计"  
          />  
            
          <NavigationCard  
            name="Shields"  
            url="https://shields.io/"  
            description="为开源项目生成各种徽章，支持自定义样式"  
            avatar="https://shields.io/img/logo.png"  
            category="徽章工具"  
          />  
            
          <NavigationCard  
            name="Clarity"  
            url="https://clarity.microsoft.com/"  
            description="微软的免费用户行为分析工具，提供热图功能"  
            avatar="https://picbed.xiaozhangya.xin/picbed/20250726225237829.png"  
            category="用户分析"  
          />  
        </div>  
      </section>  
  
      <!-- 服务平台 -->  
      <section>  
        <div class="flex items-center gap-3 mb-6">  
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-[var(--primary-color)] to-[var(--primary-color-darken)] flex items-center justify-center">  
            <Icon name="mdi:server" class="w-5 h-5 text-[var(--primary-color)]" />  
          </div>  
          <h2 class="text-xl font-bold text-[var(--text-color)]">服务平台</h2>  
          <div class="flex-1 h-px bg-gradient-to-r from-[var(--border-color)] to-transparent"></div>  
        </div>  
          
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">  
          <NavigationCard  
            name="DigitalPlat"  
            url="https://dash.domain.digitalplat.org/panel/main"  
            description="提供免费域名注册服务，支持多种顶级域名"  
            avatar="https://picbed.xiaozhangya.xin/picbed/20250726172053106.png"  
            category="域名管理"  
          />  
            
          <NavigationCard  
            name="Cloudflare"  
            url="https://dash.cloudflare.com/login"  
            description="全球领先的CDN和网络安全服务提供商"  
            avatar="https://www.cloudflare.com/favicon.ico"  
            category="CDN服务"  
          />  
            
          <NavigationCard  
            name="EdgeOne"  
            url="https://console.edgeone.cn/login"  
            description="国内CDN和边缘计算服务"  
            avatar="https://img.xiaozhangya.xin/file/Logo/cRfyZZ2A.png"  
            category="CDN服务"  
          />  
            
          <NavigationCard  
            name="Spaceship"  
            url="https://www.spaceship.com/"  
            description="A domain odyssey"  
            avatar="https://img.xiaozhangya.xin/file/Logo/1753850924810_Spaceship.png"  
            category="域名售卖"  
          />  
            
          <NavigationCard  
            name="Waline"  
            url="https://waline.js.org/"  
            description="简洁、安全的评论系统"  
            avatar="https://waline.js.org/favicon.ico"  
            category="评论服务"  
          />  
            
          <NavigationCard  
            name="Giscus"  
            url="https://giscus.app/zh-CN"  
            description="GitHub Discussions 评论系统"  
            avatar="https://avatars.githubusercontent.com/ml/9968?s=82&v=4"  
            category="评论服务"  
          />  
            
          <NavigationCard  
            name="Akismet"  
            url="https://akismet.com/"  
            description="保持评论区干净整洁的小助手"  
            avatar="https://img.xiaozhangya.xin/file/Logo/opkjgCvb.svg"  
            category="评论服务"  
          />  
            
          <NavigationCard  
            name="GitHub"  
            url="https://github.com"  
            description="全球最大的开源代码托管平台和开发者社区"  
            avatar="https://github.githubassets.com/favicons/favicon.svg"  
            category="代码托管"  
          />  
            
          <NavigationCard  
            name="InfinityFree"  
            url="https://www.infinityfree.com"  
            description="免费托管WordPress和其他网站"  
            avatar="https://img.xiaozhangya.xin/file/Logo/1754280946361_InfinityFree.png"  
            category="免费主机"  
          />  
        </div>  
      </section>  
  
      <!-- 娱乐资源 -->  
      <section>  
        <div class="flex items-center gap-3 mb-6">  
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-[var(--primary-color)] to-[var(--primary-color-darken)] flex items-center justify-center">  
            <Icon name="mdi:image" class="w-5 h-5 text-[var(--primary-color)]" />  
          </div>  
          <h2 class="text-xl font-bold text-[var(--text-color)]">娱乐资源</h2>  
          <div class="flex-1 h-px bg-gradient-to-r from-[var(--border-color)] to-transparent"></div>  
        </div>  
          
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">  
          <NavigationCard  
            name="Wallhaven"  
            url="https://wallhaven.cc/"  
            description="高质量壁纸分享社区，提供4K和超高清壁纸资源"  
            avatar="https://picbed.xiaozhangya.xin/picbed/20250726182418838.png"  
            category="壁纸资源"  
          />  
            
          <NavigationCard  
            name="网盘资源社"  
            url="https://www.wpzysq.com/"  
            description="网盘资源分享平台"  
            avatar="https://img.xiaozhangya.xin/file/Logo/RwkDhIdV.png"  
            category="网盘资源"  
          />  
            
          <NavigationCard  
            name="宝可梦节点"  
            url="https://52pokemon.huxx.top/login"  
            description="网络代理服务"  
            avatar="https://52pokemon.huxx.top/favicon.ico"  
            category="代理服务"  
          />  
        </div>  
      </section>  
  
      <!-- 分隔线 -->  
      <div class="flex justify-center py-6">  
        <Icon name="mdi:heart" class="w-8 h-8 text-[var(--primary-color)] opacity-60" />  
      </div>  
    </div>  
  </div>  
</MainLayout>