---      
export interface NavigationCardProps {      
  name: string;      
  avatar: string;      
  description: string;      
  url: string;      
  category: string;      
  id?: string;      
}      
      
const { name, avatar, description, url, category, id } = Astro.props as NavigationCardProps;      
      
import { Image } from "astro:assets";      
import { Icon } from "astro-icon/components";      
---      
      
<div class="card bg-base-100 shadow-lg border border-base-200 overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1">      
  <a href={url} target="_blank" rel="noopener noreferrer" class="block">       
    <!-- 保持你的渐变背景色 -->      
    <div class="p-4 text-black" style="background-image:linear-gradient(-225deg,#E3FDF5 0%, #FFE6FA 100%)">      
      <div class="flex items-center justify-between">      
        <div class="flex items-center gap-3">      
          <div class="avatar">      
            <div class="w-12 h-12 rounded-lg overflow-hidden">      
              <Image src={avatar} width={48} height={48} format="webp" alt={name} loading="lazy" class="object-cover rounded-lg" />      
            </div>      
          </div>      
          <div>      
            <h3 class="font-bold text-lg text-black">{name}</h3>      
            <!-- 去掉边框，使用纯背景色 -->  
            <div class="px-2 py-1 text-xs rounded-full text-black/80 bg-white/30">{category}</div>      
          </div>      
        </div>      
        {id && (      
          <div class="text-right">      
            <div class="text-xs opacity-75 text-black">ID</div>      
            <div class="font-mono text-sm text-black">{id}</div>      
          </div>      
        )}      
      </div>      
    </div>     
    
    <!-- 卡片内容 -->      
    <div class="p-4">      
      <p class="text-sm text-base-content/85 mb-3 line-clamp-2">{description}</p>      
                
      <!-- 底部信息条 -->    
      <div class="flex items-center justify-between pt-2 border-t border-base-200">    
        <div class="flex items-center gap-1 text-xs text-base-content/80">    
          <Icon name="lucide:external-link" class="w-3 h-3" />    
          <span>访问网站</span>    
        </div>    
        <div class="text-xs text-base-content/70 font-mono">    
          {new URL(url).hostname}    
        </div>    
      </div>     
    </div>      
  </a>      
</div>